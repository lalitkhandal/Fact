<resources>

    <style name="AppTheme.TextAppearance" parent="TextAppearance.MaterialComponents.Body1"/>


    <style name="Header" parent="AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/font22</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="Title" parent="AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/font18</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="Description" parent="AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/font14</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>


    <style name="AppTheme.Header.Regular" parent="Header">
        <item name="fontFamily">@font/font_josefinslab_regular</item>
        <item name="android:fontFamily">@font/font_josefinslab_regular</item>
    </style>
    <style name="AppTheme.Header.Bold" parent="Header">
        <item name="fontFamily">@font/font_josefinslab_bold</item>
        <item name="android:fontFamily">@font_josefinslab_bold</item>
    </style>


    <style name="AppTheme.Title.Splash" parent="Title">
        <item name="fontFamily">@font/font_josefinslab_bold</item>
        <item name="android:fontFamily">@font/font_josefinslab_bold</item>
        <item name="android:textSize">@dimen/font20</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <style name="AppTheme.Title.Regular" parent="Title">
        <item name="fontFamily">@font/font_josefinslab_regular</item>
        <item name="android:fontFamily">@font/font_josefinslab_regular</item>
    </style>
    <style name="AppTheme.Title.Bold" parent="Title">
        <item name="fontFamily">@font/font_josefinslab_bold</item>
        <item name="android:fontFamily">@font_josefinslab_bold</item>
    </style>


    <style name="AppTheme.Description.Regular" parent="Description">
        <item name="fontFamily">@font/font_josefinslab_regular</item>
        <item name="android:fontFamily">@font/font_josefinslab_regular</item>
    </style>
    <style name="AppTheme.Description.Bold" parent="Description">
        <item name="fontFamily">@font/font_josefinslab_bold</item>
        <item name="android:fontFamily">@font_josefinslab_bold</item>
    </style>

</resources>
